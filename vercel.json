{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api/index.js"
        },
        {
            "source": "/auth/:path*",
            "destination": "/api/index.js"
        },
        {
            "source": "/assets/:path*",
            "destination": "/invoice-react/dist/assets/:path*"
        },
        {
            "source": "/((?!api/.*|auth/.*).*)",
            "destination": "/invoice-react/dist/index.html"
        }
    ],
    "functions": {
        "api/index.js": {
            "memory": 1024,
            "maxDuration": 10
        }
    }
}