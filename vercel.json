{
    "version": 2,
    "outputDirectory": "dist",
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api/index.js"
        },
        {
            "source": "/auth/:path*",
            "destination": "/api/index.js"
        },
        {
            "source": "/assets/:path*",
            "destination": "/dist/assets/:path*"
        },
        {
            "source": "/((?!api/.*|auth/.*).*)",
            "destination": "/dist/index.html"
        }
    ]
}